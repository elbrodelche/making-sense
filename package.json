{
  "name": "api",
  "version": "1.0.0",
  "description": "A demo API for Making Sense condign challenge",
  "main": "index.js",
  "scripts": {
    "prestart": "npm install && npm run db:migrate",
    "start": "node app.js",
    "watch": "nodemon --signal SIGINT app.js",
    "verbose": "DEBUG=* nodemon --signal SIGINT app",
    "format": "prettier-package-json --write package.json",
    "lint": "eslint . --color",
    "lint:fix": "eslint . --fix",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --timeout 10000 --reporter progress tests/**/*.spec.js",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Juan Carlos Migliavacca",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.0",
    "husky": "^1.3.1",
    "prettier-package-json": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-mocha": "^5.3.0",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "sinon": "^7.3.1",
    "should": "^13.2.3",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "1000"
  }
}
