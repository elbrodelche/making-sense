{
  "name": "api",
  "description": "A demo API for Making Sense condign challenge",
  "license": "MIT",
  "author": "Juan Carlos Migliavacca",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "format": "prettier-package-json --write package.json",
    "lint": "eslint . --color",
    "lint:fix": "eslint . --fix",
    "lint:watch": "npm run lint -- --watch",
    "prestart": "npm install && npm run db:migrate",
    "start": "node app.js",
    "test": "mocha --timeout 10000 --reporter progress tests/**/*.spec.js",
    "test:watch": "npm run test -- --watch",
    "verbose": "DEBUG=* nodemon --signal SIGINT app",
    "watch": "DEBUG=makingsense nodemon --signal SIGINT app.js"
  },
  "dependencies": {
    "bcrypt": "^3.0.4",
    "bluebird": "^3.5.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "express-session": "^1.16.1",
    "figlet": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.16.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.11.0",
    "shortid": "^2.2.14"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-mocha": "^5.3.0",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "prettier-package-json": "^2.1.0",
    "should": "^13.2.3",
    "sinon": "^7.3.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "1000"
  }
}
